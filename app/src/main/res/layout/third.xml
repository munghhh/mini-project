<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:paddingLeft="18dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="3일전 :"

            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="7시간 20분"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <!-- 막대 그래프 예시 -->
        <View
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="#FF80AB" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="2일전 :"

            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="6시간 30분"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <!-- 막대 그래프 예시 -->
        <View
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginRight="80dp"
            android:layout_weight="1"
            android:background="#3A52EA" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="어제 :"

            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="7시간 10분"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <!-- 막대 그래프 예시 -->
        <View
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:background="#E85CC5" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewAverageSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평균 수면시간 : 7시간"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="#7E7A87"
        android:text="처음화면으로"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="90dp" />



</LinearLayout>